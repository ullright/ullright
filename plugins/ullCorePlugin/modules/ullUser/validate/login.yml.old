methods:
  post: [username, password]

names:
  username:
    required:     true
    required_msg: Your username is required!
    validators:   usernameValidator

  password:
    required:     true
    required_msg: Your password is required!

usernameValidator:
    class:        sfStringValidator
    param:
      min:        4
      min_error:  Username must be 4 or more characters